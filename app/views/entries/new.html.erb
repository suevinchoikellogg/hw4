<h1>New Entry</h1>

<div class="container mt-4"></div>

<form action="/entries" method="post">
  <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

  <div class="mb-4">
    <label for="title_input" class="form-label">Title</label>
    <input type="text" name="title" id="title_input" class="form-control">
  </div>

  <div class="mb-4">
    <label for="description_input" class="form-label">Description</label>
    <input type="text" name="description" id="description_input" class="form-control">
  </div>

  <div class="mb-4">
    <label for="occurred_on_input" class="form-label">Occurred On</label>
    <input type="date" name="occurred_on" id="occurred_on_input" class="form-control">
  </div>

  <!--
  <div class="mb-4">
    <label for="image_input" class="form-label">Image URL</label>
    <input type="text" name="image" id="image_input" class="form-control">
  </div>
   -->


  <div class="mb-4">
    <label for="image_url_input" class="form-label">Upload Image</label>
    <input type="file" name="image_url" id="image_url" class="form-control">
  </div>

<div class="container mt-4"></div>

  <button class="btn btn-primary">Save</button>
</form>



