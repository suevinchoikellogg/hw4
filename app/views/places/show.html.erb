<h1 style="font-weight: bold"><%= @place["name"] %></h1>

<div class="container mt-4"></div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Post</a>
</p>

<div class="container mt-4"></div>

<div class="row">
  <% for entry in @entries %>
    <div class="col-md-4">
      <h4 style="font-weight: bold;"><%= entry["title"] %></h4>
    <div class="col text-front">
      <div class="mb-3"><%= entry["occurred_on"] %></div>
    </div>
    <img src="<%= entry["image_url"] %>" class="img-fluid" style="object-fit: cover; height: 300px;">
    <div class="col text-front">
      <div class="mt-3 mb-3"><%= entry["description"] %></div>
    </div>
  </div>
<% end %>

